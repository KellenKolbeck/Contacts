<h1>Enter contact's information below:</h1>

<form action='/new_contact' method='post' class='form-group contact-entry-form'>

  <div class='container-2'>

    <div class='column col-sm-6'>
      <input name="first-name" id="first_name" class="form-control ah-form-input" type="text" placeholder="First Name">
    </div>
    <div class='column col-sm-6'>
      <input name="last-name" id="last-name" class="form-control ah-form-input" type="text" placeholder="Last Name">
    </div>

  </div>

  <div class="container-2">

    <div class='column col-sm-6'>
      <input name="job" id="job" class="form-control ah-form-input" type="text" placeholder="Job">
    </div>
    <div class='column col-sm-6'>
      <input name="company" id="company" class="form-control ah-form-input" type="text" placeholder="Company">
    </div>

  </div>

  <div class="container-2">

    <div class='column col-sm-12'>
      <input name="street" id="street" class="form-control ah-form-input" type="text" placeholder="Street Address">
    </div>

  </div>

  <div class="container-2">

    <div class='column col-sm-3'>
      <input name="city" id="city" class="form-control ah-form-input" type="text" placeholder="City">
    </div>
    <div class='column col-sm-3'>
      <input name="state" id="state" class="form-control ah-form-input" type="text" placeholder="State">
    </div>
    <div class='column col-sm-3'>
      <input name="zip" id="zip" class="form-control ah-form-input" type="text" placeholder="Zip Code">
    </div>
    <div class='column col-sm-3'>
      <input name="address-type" id="address-type" class="form-control ah-form-input" type="text" placeholder="Home/Work">
    </div>

  </div>

  <div class="container-2">

    <div class='column col-sm-4'>
      <input name="area-code" id="area-code" class="form-control ah-form-input" type="text" placeholder="Area Code: (ex: 503)">
    </div>
    <div class='column col-sm-4'>
      <input name="number" id="number" class="form-control ah-form-input" type="text" placeholder="Phone Number: (ex: 2284592)">
    </div>
    <div class='column col-sm-4'>
      <input name="zip" id="zip" class="form-control ah-form-input" type="text" placeholder="Zip Code">
    </div>

  </div>

  <div class="container-2">

    <div class='column col-sm-12'>
      <input name="email" id="email" class="form-control ah-form-input" type="text" placeholder="Email Address">
    </div>

  </div>

  <div class="container-2">

    <div class='column col-sm-6'>
      <input name="facebook" id="facebook" class="form-control ah-form-input" type="text" placeholder="Facebook ID">
    </div>
    <div class='column col-sm-6'>
      <input name="linked-in" id="linked-in" class="form-control ah-form-input" type="text" placeholder="LinkedIn ID">
    </div>

  </div>

  <button type="submit" class="btn btn-default">Submit</button>

</form>
